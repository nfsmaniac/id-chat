doctype html
html
	head
		title Chat
		link(rel="stylesheet", href="lib/bootstrap.css")
		link(rel="stylesheet", href="lib/jquery-ui.min.js")
		link(rel="stylesheet", href="style.css")
		script(src='lib/jquery-3.1.0.min.js')
		script(src='lib/jquery-ui.min.js')
		script(src="/socket.io/socket.io.js")
		script(src="lib/bootstrap.min.js")
		script(src='lib/jquery.slimscroll.min.js')
		script(src="lib/jquery.timeago.js")
		script(src="script.js")
	body
		div.container#main
			div.navbar.navbar-fixed-top
				div.navbar-inner
					div.container
						a.brand(href="#") Chat
			div#chatEntries
			div.row#entries
				input(type='text')#messageInput
				div.btn-group
					button.btn#submit(data-loading-text="Send") Send
			div#nbUsersDiv
				p There is 
					span#nbUsers
					|  connected user(s).
	div.modal.fade#modalPseudo
		div.modal-header
			h3 Guest Login Form
		div.modal-body
			p Choose a name :
			input(type='text')#pseudoInput
			div.alert.alert-error#alertPseudo
				| This name is already used ! Choose another one.
			p Set your age :
			input(type='text')#pseudoAgeInput
			p Set your sex :
				select#pseudoSexInput
					option M
					option F
					option ?
			div.modal-footer
			button.btn.btn-primary#pseudoSubmit Go to the chat
	div.modal.fade#modalInfos
		div.modal-header
			h3 Infos
		div.modal-body
	div.modal.fade#modalLogin
		div.modal-header
			button(type="button" class="close" data-dismiss="modal" aria-label="Close")
			h3 Welcome Back
		div.modal-body
			div#welcomeBack
		div.modal-footer
			button(type="button" class="btn btn-primary" data-dismiss="modal") Close
